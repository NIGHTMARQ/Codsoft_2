<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/book.css">
  <title>Flight Search</title>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <link rel="icon" href="../public/image/favicon.ico">
</head>
<body>
  <div class="search-panel">
    <h1>Flight Search</h1>
    <form id="search-form">
      <label for="origin">Origin:</label>
      <input type="text" id="origin" name="origin" placeholder="Enter Airport's Code" required>

      <label for="destination">Destination:</label>
      <input type="text" id="destination" name="destination" placeholder="Enter Airport's Code" required>

      <label for="date">Departure Date:</label>
      <input type="date" id="date" name="date" required>

      <label for="adult">Number of Adults: </label>
      <input type="number" id="adult" name="adult" min="1" max="9" required>

      <button type="submit">Search Flights</button>
    </form>
  </div>
  <input type="hidden" id="username" name="username" value="<%- user.username %>">
  <div class="container">
    <h1>Search Results</h1>
    <table id="search">
        <thead>
          <tr>
            <th>Flight Code</th>
            <th>Flight Name</th>
            <th>Departure Airport</th>
            <th>Departure Time</th>
            <th>Arrival Airport</th>
            <th>Arrival Time</th>
            <th>Duration</th>
            <th>Stops</th>
            <th>Price</th>
            <th>Book</th>
          </tr>
        </thead>
        <tbody id="search-results-table">
          <!-- Search results will be populated here -->
        </tbody>
      </table>
    </div>  
  <script src="./script.js"></script>
</body>
</html>
