  <script>
    var username = '<%= username.username %>';
    console.log(username);

    function formatDatetime(datetimeString) {
      const datetimeParts = datetimeString.split('T');
      const date = datetimeParts[0]; // Extract date part
      const time = datetimeParts[1].slice(0, 5); // Extract time part (HH:mm)

      return { date, time };
    }

    const departureDatetimeInfo = formatDatetime('<%= detail.departureAirport.time %>');
    const arrivalDatetimeInfo = formatDatetime('<%= detail.arrivalAirport.time %>')

    // Function to update elements with date and time
    function updateElements() {
      // Update elements for departure time
      const departureTimeElements = document.querySelectorAll('.departure-time');
      departureTimeElements.forEach((element) => {
        element.innerHTML = `
          <span class="time">
            ${departureDatetimeInfo.time}
          </span>
        `;
      });

      // Update elements for arrival time
      const arrivalTimeElements = document.querySelectorAll('.arrival-time');
      arrivalTimeElements.forEach((element) => {
        element.innerHTML = `
          <span class="time">
            ${arrivalDatetimeInfo.time}
          </span>
        `;
      });

      // Update elements for departure date and time
      const departureDetailElements = document.querySelectorAll('.departure-detail');
      departureDetailElements.forEach((element) => {
        element.innerHTML = `
          <span class="date ThemeColor8">
            ${departureDatetimeInfo.date}
          </span>
          <span class="time f-bold">
            ${departureDatetimeInfo.time}
          </span>
        `;
      });

      // Update elements for arrival date and time
      const arrivalDetailElements = document.querySelectorAll('.arrival-detail');
      arrivalDetailElements.forEach((element) => {
        element.innerHTML = `
          <span class="date ThemeColor12">
            ${arrivalDatetimeInfo.date}
          </span>
          <span class="time f-bold">
            ${arrivalDatetimeInfo.time}
          </span>
        `;
      });
    }

    // Call the updateElements function
    updateElements();


    document.addEventListener("DOMContentLoaded", () => {
        const confirmButton = document.getElementById('confirm-booking');
        confirmButton.addEventListener("click", async () => {
            detail = JSON.parse(confirmButton.getAttribute('data-detail'));
            const BookDetails = {
                flight: detail.flight_code,
                depart : {
                    city: detail.departureAirport.city,
                    code: detail.departureAirport.code,
                    airport: detail.departureAirport.label,
                    time: detail.departureAirport.time
                },
                arrive : {
                    city: detail.arrivalAirport.city,
                    code: detail.arrivalAirport.code,
                    airport: detail.arrivalAirport.label,
                    time: detail.arrivalAirport.time
                },
                duration: detail.duration.text,
                price: detail.totals.total,
                username: username
            };
            
            //console.log(user);

            try {
                const response = await fetch('/confirm-booking', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(BookDetails), 
                    //user: JSON.stringify(username)
                })

                if (response.ok) {
                    //window.location.href = 'response';
                    alert('Confirmed booking');
                    const bookingInfo = {
                        flight: detail.flight_code,
                        depart: {
                            city: detail.departureAirport.city,
                            code: detail.departureAirport.code,
                            airport: detail.departureAirport.label,
                            time: detail.departureAirport.time,
                        },
                        arrive: {
                            city: detail.arrivalAirport.city,
                            code: detail.arrivalAirport.code,
                            airport: detail.arrivalAirport.label,
                            time: detail.arrivalAirport.time,
                        },
                        duration: detail.duration.text,
                        price: detail.totals.total,
                    };

                    const queryParams = new URLSearchParams({user: username,
                            bookingDetails: JSON.stringify(bookingInfo),});

                    // Redirect to /tic with query parameters
                    window.location.href = '/tic?' + queryParams.toString();
                } else {
                    alert('Failed booking')
                }
            }
            catch (error) {
                console.error('Error:', error);
            }
        })
    })
  </script>


